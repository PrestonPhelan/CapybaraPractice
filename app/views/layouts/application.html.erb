<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
  <%= current_user.username %>
  <%= link_to 'Sign Out', session_url, method: :delete %>
  <% end %>

  <%= flash[:errors].join("<br>").html_safe if flash[:errors] %>


<%= yield %>

</body>
</html>
